{
  "name": "hof-lookup-replacer",
  "version": "1.0.0",
  "description": "A Node.js based service for replacing db lookup tables as a scheduled job.",
  "main": "run.js",
  "engines": {
    "node": ">=18.19.0"
  },
  "scripts": {
    "start": "node run.js",
    "start:dev": "node -r dotenv/config run.js",
    "test:all": "yarn test:integration && yarn test:unit",
    "test:integration": "nyc _mocha \"test/_integration/**/*.spec.js\"",
    "test:lint": "eslint . --config ./node_modules/eslint-config-hof/default.js",
    "test:unit": "nyc _mocha \"test/_unit/**/*.spec.js\"",
    "test:snyk": "snyk config set api=SNYK_TOKEN && snyk test"
  },
  "author": "HOF team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.7",
    "knex": "^3.1.0",
    "pg": "^8.11.3",
    "winston": "^3.12.0"
  },
  "devDependencies": {
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-hof": "^1.3.4",
    "snyk": "^1.1281.0"
  }
}
